### i3blocks config file

# Global properties
command=/usr/lib/i3blocks/$BLOCK_NAME
separator_block_width=30
markup=none

# Volume indicator
[volume]
label=奔
instance=Master
min_width="100%"
interval=once
signal=10

# Memory usage
[memory]
label=
interval=10

# Wifi
[wifi]
label=直
instance=wlp1s0
min_width="100%"
interval=10

# Battery indicator
[battery]
command=~/.config/i3blocks/scripts/battery
label=
min_width="100%"
interval=30

# Date
[time]
label=
command=date '+%d-%m-%Y'
interval=30

# Time
[time]
label=
command=date '+%H:%M'
interval=5
