{
	"languageserver": {

		"lua": {
			"command": "lua-lsp",
			"filetypes": ["lua"]
		},

		"svls": {
			"command": "svls",
			"filetypes": ["verilog", "systemverilog"]
		},

		"vimls": {
			"command": "vim-language-server",
			"args": ["--stdio"],
			"initializationOptions": {
				"iskeyword": "@,48-57,_,192-255,-#",
				"vimruntime": "",
				"runtimepath": "",
				"diagnostic": {
					"enable": true
				},
				"indexes": {
					"runtimepath": true,
					"gap": 100,
					"count": 3,
					"projectRootPatterns" : ["strange-root-pattern", ".git", "autoload", "plugin"]
				},
				"suggest": {
					"fromVimruntime": true,
					"fromRuntimepath": false
				}
			},
			"filetypes": [ "vim" ]
		}

	}
}
