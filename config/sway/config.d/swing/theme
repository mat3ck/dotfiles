### Theme

#
# Background
#

output * bg $background fill

#
# Colors
#

# Wallpaper background
set $color_bgd1 #1a181d
# Background color
set $color_bgd2 #2e2a33

# Text color
set $color_txt1 #e5e4ce
# Bold text color
set $color_txt2 #2e2a33

# Focused border and titlebar color
set $color_bor1 #e5e4ce
# Unfocused border and titlebar color
set $color_bor2 #504a59

# Focused indicator and titlebar color
set $color_ind1 #e5e4ce
# Unfocused indicator and titlebar color
set $color_ind2 #504a59

#
# Window decoration
#

# Broder
default_border pixel 2
# Gaps
gaps 4
# Colors of clients
client.background 	$color_bgd2
client.focused 		$color_bor1 $color_bor1 $color_txt2 $color_ind1 $color_bor1
client.focused_inactive $color_bor2 $color_bor2 $color_txt1 $color_ind2 $color_bor2
client.unfocused 	$color_bor2 $color_bor2 $color_txt1 $color_ind2 $color_bor2
client.urgent 		$color_bor1 $color_bor1 $color_txt1 $color_ind2 $color_bor1
client.placeholder 	$color_bor2 $color_bor2 $color_txt1 $color_ind2 $color_bor2

#
#
#

include $config_dir/$theme/swaybar
